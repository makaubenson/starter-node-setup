// ====== Header Mobile Area ======
header.mobile-header-area.bg-gray-color.hidden-md.hidden-lg
  .container
    .row
      .col-xs-12.tb
        .mobile-header-block
          .menu-area.tb-cell
            // Mobile Main Menu
            .mobile-menu-main.hidden-md.hidden-lg
              .menucontent.overlaybg
              .menuexpandermain.slideRight
                a#navtoggole-main.animated-arrow.slideLeft.menuclose
                  span
                span#menu-marker
              // /.menuexpandermain
              #mobile-main-nav.main-navigation.slideLeft
                .menu-wrapper
                  #main-mobile-container.menu-content.clearfix
                  .left-content
                    ul
                     if user
                      li
                       a.cd-signin(style='margin-left:10px' href='#'  )= user.name.split(" ")[0]  
                        img(style='height: 40px;border-radius: 100%; margin-left:10px' src='/img/users/default.jpg'  alt=`${user.name}`)
                      li 
                       a.logout_btn(href="#") logout 
                     else
                      li
                        a.cd-signin(href='/login')
                          i.fa.fa-address-book
                          | Login /
                          | Register
                  // /.left-content
              // /#mobile-main-nav
            // /.mobile-menu-main
          // /.menu-area
          .logo-area.tb-cell
            .site-logo
              a(href='home.html')
                img(width='53px' src='/img/node.png' alt='site-logo')
            // /.site-logo
          // /.logo-area
        // /.mobile-header-block
